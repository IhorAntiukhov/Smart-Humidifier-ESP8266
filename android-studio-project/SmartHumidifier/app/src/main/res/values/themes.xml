<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SmartHeater" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.SmartHeater.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:keyTextColor">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/secondary_color</item>
        <item name="android:textColorTertiary">@color/primary_color</item>
        <item name="textColorAlertDialogListItem">@color/primary_color</item>

        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>
    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_style</item>
    </style>
    <style name="HumidityProgressBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/humidity_progress_bar_style</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/primary_color</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/secondary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>
</resources>